{
  "testRunner": "fixie",

  "buildOptions": {
    "copyToOutput": {
      "include": [
        "Execution/Listeners/NUnitXmlReport.xml",
        "Execution/Listeners/XUnitXmlReport.xml",
        "Execution/Listeners/NUnitXmlReport.xsd",
        "Execution/Listeners/XUnitXmlReport.xsd"
      ]
    }
  },

  "dependencies": {
    "Fixie": {
      "target": "package",
      "version": "2.0.0-*"
    },
    "Fixie.Execution": {
      "target": "package",
      "version": "2.0.0-*"
    },
    "Fixie.Runner": {
      "target": "package",
      "version": "2.0.0-*"
    },
    "Fixie.TestDriven": { "target": "project" },
    "Fixie.Assertions": { "target": "project" },
    "TestDriven.Framework": "2.0.0-alpha2"
  },

  "frameworks": {
    "net45": {
      "frameworkAssemblies": {
        "System.Configuration": "4.0.0.0",
        "System.Xml": "4.0.0.0"
      }
    },
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      }
    }
  }
}
