<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>

    <!-- Override the default DebugType (portable)
         as a temporary workaround for the fact that
         the referenced version of Mono.Cecil cannot
         handle the PDB files generated by that DebugType. -->
    <DebugType>full</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Fixie.Assertions\Fixie.Assertions.csproj" />
    <ProjectReference Include="..\Fixie.Execution\Fixie.Execution.csproj" />
    <ProjectReference Include="..\Fixie.TestDriven\Fixie.TestDriven.csproj" />
    <ProjectReference Include="..\Fixie.VisualStudio.TestAdapter\Fixie.VisualStudio.TestAdapter.csproj" />
    <ProjectReference Include="..\Fixie\Fixie.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Configuration" />
    <Reference Include="System.Web.Extensions" />
    <Reference Include="TestDriven.Framework">
      <HintPath>..\..\lib\TestDriven.Framework.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Execution\Listeners\XUnitXmlReport.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Execution\Listeners\XUnitXmlReport.xsd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>